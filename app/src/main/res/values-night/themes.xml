<resources>
    <!-- Base application theme. -->
    <style name="Theme.VoiceRecorder" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_color_light</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/theme_color_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/backgroundColor</item>

        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/theme_color_dark</item>
        <item name="textColor">@color/white</item>
        <item name="scrollButtonBackgroundColor">@color/theme_color_dark</item>
    </style>
</resources>